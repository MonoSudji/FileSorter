<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="kz.append.FileSorterController" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label text="Путь к директории:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="directoryPathField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <Button text="Обзор" onAction="#browseDirectory" GridPane.columnIndex="2" GridPane.rowIndex="0"/>

    <Label text="Тип файла:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="fileTypeField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Название папки:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="folderNameField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Button text="Добавить тип" onAction="#addTypeMapping" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Button text="Сортировать" onAction="#sortFiles" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
</GridPane>